    "Test":{ 
      "params":["null"],
      "triggers":{
      },
      "actions":{
        "hello":["ArrayOfStrings"]
      }
    }
  },
  "yourDevices":{
    "PST Clock":{
      "type":"Clock",
      "params":{}
    },
    "ButtonOnTable":{
      "type":"SparkButton",
      "params":{
        "int-id" : "1"
      }
    },
    "LightInLivingRoom":{
      "type":"SparkLight",
      "params":{
        "int-id" : "0"
      }
    },
    "TestPrinter":{
      "type":"Test",
      "params":{}
    }
  },
  "yourScenarios":[
    {
      "description":"When I press the button turn on the light",
      "trigger":{
          "description":"press the table button",
          "device":"ButtonOnTable",
          "trigger":"on",
          "customTrigger":"null",
          "params":{}
      },
      "actions":[
        {
          "description":"turn on the light",
          "device":"LightInLivingRoom",
          "action":"toggle",
          "params":{
            "bool":"true"
          }
        }
      ]
    },
    {
      "description":"When it's midnight turn off the light",
      "trigger":{
          "description":"At midnight",
          "device":"PST Clock",
          "trigger":"timeTrigger",
          "customTrigger":"atMidnight",
          "params":{}
      },
      "actions":[
        {
          "description":"turn off light in living room",
          "device":"LightInLivingRoom",
          "action":"off",
          "params":{}
        }
      ]
    },
    {
      "description":"Every 5 seconds say hello",
      "trigger":{
          "description":"Every 5 seconds",
          "device":"PST Clock",
          "trigger":"intervalTrigger",
          "customTrigger":"every5seconds",
          "params":{
            "seconds":"5"
          }
      },
      "actions":[
        {
          "description":"print hello",
          "device":"TestPrinter",
          "action":"hello",
          "params":{
            "ArrayOfStrings":["hi","peace"]
          }
        }
      ]
    }
  ]
