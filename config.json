        "toggle":["bool"]
      }
    },
    "Clock":{ 
      "params":["null"],
      "triggers":{
        "specificDateTrigger":["year","month","day","hour","minutes","seconds","milliseconds"],
        "yearlyTrigger":["month","day","hour","minutes","seconds","milliseconds"],
        "monthlyTrigger":["day","hour","minutes","seconds","milliseconds"],
        "dailyTrigger":["hour","minutes","seconds","milliseconds"],
        "intervalTrigger":["hour","minutes","seconds","milliseconds"]
